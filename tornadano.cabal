executable dump-script
  import:         common-lang
  import:         common-configs
  import:         common-deps
  main-is:        Main.hs
  other-modules:  Options
  hs-source-dirs: app
  ghc-options:    -threaded -rtsopts -with-rtsopts=-N
  build-depends:
    , bytestring
    , optparse-applicative
    , plutarch
    , plutus-ledger-api
    , ply-plutarch
    , text
    , tornadano

